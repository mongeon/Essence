<MudTable Items="@Entries" SortLabel="Sort By">
    <HeaderContent>
        <MudTh> <MudTableSortLabel SortBy="new Func<Entry, object>(x=>x.Supplier.Name)">Supplier</MudTableSortLabel></MudTh>
        <MudTh> <MudTableSortLabel SortBy="new Func<Entry, object>(x=>x.Date)">Date</MudTableSortLabel></MudTh>
        <MudTh> <MudTableSortLabel SortBy="new Func<Entry, object>(x=>x.Kilometers)" InitialDirection="SortDirection.Descending">Kilometers</MudTableSortLabel></MudTh>
        <MudTh> <MudTableSortLabel SortBy="new Func<Entry, object>(x=>x.TotalPrice)">Total Price</MudTableSortLabel></MudTh>
        <MudTh> <MudTableSortLabel SortBy="new Func<Entry, object>(x=>x.Liters)">Liters</MudTableSortLabel></MudTh>
        <MudTh> <MudTableSortLabel SortBy="new Func<Entry, object>(x=>x.Consumption)">L/100kms</MudTableSortLabel></MudTh>
        <MudTh> <MudTableSortLabel SortBy="new Func<Entry, object>(x=>x.LiterPrice)">$/L</MudTableSortLabel></MudTh>

    </HeaderContent>
    <RowTemplate>
        <MudTd>@context.Supplier.Name</MudTd>
        <MudTd>@context.Date.ToShortDateString()</MudTd>
        <MudTd>@context.Kilometers.ToString("N0")</MudTd>
        <MudTd>@context.TotalPrice.ToString("C2")</MudTd>
        <MudTd>@context.Liters.ToString("N3")</MudTd>
        <MudTd>@context.Consumption.ToString("N3")</MudTd>
        <MudTd>@context.LiterPrice.ToString("C3")</MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager PageSizeOptions="new int[] { 10, 25, 50, 100, int.MaxValue }"
                       AllItemsText="All" />
    </PagerContent>
</MudTable>

@code {
    [Parameter]
    public IEnumerable<Entry> Entries { get; set; } = new List<Entry>();
}
